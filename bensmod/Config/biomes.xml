<?xml version="1.0" encoding="utf-8"?>
<configs>


<!-- BIOME: snow. -->

<!-- Probability of weather types -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='default']/@prob">30</set> <!--  Default prob="44" --> 
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='fog']/@prob">20</set> <!-- Default prob="8" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/@prob">40</set> <!-- Default prob="40" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/@prob">10</set> <!--  Default prob="8" -->

<!-- decrease minimum temp -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='default']/Temperature/@min">18</set> <!-- Default min="26" -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='fog']/Temperature/@min">12</set> <!-- Default min="20" -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/Temperature/@min">9</set> <!-- Default min="18" -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/Temperature/@min">0</set> <!--  Default min="12" -->

<!-- Purpose: CloudThickness looks good-->

<!-- Purpose: Moar snow +5 -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='default']/Precipitation/@min">0</set> <!--  Default min="0" max="0" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='default']/Precipitation/@max">5</set> <!--  Default min="0" max="0" -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='fog']/Precipitation/@min">5</set> <!-- Default min="0" max="0" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='fog']/Precipitation/@max">10</set> <!--  Default min="0" max="0" -->

<!-- Purpose: Foggier +10 -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/Fog/@min">5</set>  <!-- Default min="1" max="5" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/Fog/@max">10</set> <!--  Default min="1" max="5" -->

<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/Fog/@min">20</set> <!--  Default min="18" max="25" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/Fog/@max">30</set> <!--  Default min="18" max="25" -->

<!-- Purpose: Windier +10 -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/Wind/@max">35</set> <!--  Default min="18" max="25" -->
<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/Wind/@max">60</set> <!--  min="45" max="50" -->

<!-- BIOME: desert -->

<!-- Default weather prob % look fine -->

<!-- increase temp unless rain/storm -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='default']/Temperature/@max">120</set> <!--  Default min="95" max="105" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Temperature/@min">80</set> <!--  Default min="95" max="105" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Temperature/@max">95</set> <!--  Default min="95" max="105" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Temperature/@min">70</set> <!--  Default min="95" max="105" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Temperature/@max">80</set> <!--  Default min="95" max="105" -->

<!-- modify precipiation amount -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Precipitation/@min">10</set> <!-- Default  min="25" max="55" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Precipitation/@max">20</set> <!-- Default  min="25" max="55"-->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Precipitation/@min">25</set> <!-- Default  min="55" max="80" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Precipitation/@max">35</set> <!-- Default  min="55" max="80"-->

<!-- add fog to default -->
<append xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='default']">
  <Fog min="13" max="22" prob="1"/>
</append>

<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Fog/@min">10</set> <!-- Default  min="55" max="80"-->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Fog/@max">20</set> <!-- Default  min="55" max="80"-->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Fog/@min">5</set> <!-- Default  min="55" max="80"-->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Fog/@max">10</set> <!-- Default  min="55" max="80"-->

<!-- increase wind values -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='default']/Wind/@min">15</set> <!--  Default min="8" max="25" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='default']/Wind/@max">35</set> <!--  Default min="8" max="25" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Wind/@min">35</set> <!--  Default min="15" max="35" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/Wind/@max">50</set> <!--  Default min="15" max="35" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Wind/@max">50</set> <!--  Default min="50" max="55" -->
<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/Wind/@max">65</set> <!--  Default min="50" max="55" -->
</configs>